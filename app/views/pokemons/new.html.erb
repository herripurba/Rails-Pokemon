<div class = "container mx-auto space-y-5">

    <% if flash[:success] %>
        <div id="flash-success" class="absolute block right-0 top-0 bg-green-100 m-3 py-3 px-5 text-green-600 rounded-lg font-semibold text-lg"><%= flash[:success] %></div>
    <% end %>
    <h1 class="md:text-5xl text-3xl font-bold py-12">Create Pokemon</h1>

    <% if @pokemon.errors.any? %>
        <div id="error_explanation" class ="field_with_errors bg-red-200 w-full rounded-lg p-5">
            <h2 class= "text-3xl font-semibold"><%= pluralize(@pokemon.errors.count, "Error") %> prohibited this Battle From being created:</h2>

            <ul class="ml-8">
            <% @pokemon.errors.each do |error| %>
                <li class="list-disc"><%= error.message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <%= render 'form',  pokemon: @pokemon, pokedexes: @pokedexes%>
</div>  